<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/designlogo"
    tools:context=".Interface.SignupActivity">


    <TextView

        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="100dp"
        android:text="SIGN UP"
        android:textSize="60dp"
        android:fontFamily="@font/f"
        android:textStyle="bold"

        />






    <EditText
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:id="@+id/signup_email"
        android:background="@drawable/background_category"
        android:layout_marginTop="150dp"
        android:padding="8dp"
        android:hint="Email"
        android:drawableLeft="@drawable/background_category"
        android:layout_marginLeft="20dp"
        android:drawablePadding="8dp"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:id="@+id/signup_password"
        android:background="@drawable/background_category"
        android:layout_marginTop="20dp"
        android:padding="15dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_marginLeft="20dp"
        android:drawablePadding="8dp"/>

    <EditText
        android:layout_marginLeft="20dp"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:id="@+id/signup_confirm"
        android:background="@drawable/background_category"
        android:layout_marginTop="20dp"
        android:padding="15dp"
        android:hint="Confirm Password"
        android:inputType="textPassword"

        android:drawablePadding="8dp"/>

    <Button
        android:layout_marginLeft="100dp"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:text="Sign Up"
        android:id="@+id/signup_button"
        android:backgroundTint="#3d33a8"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        app:cornerRadius = "30dp"/>


    <TextView
        android:layout_marginRight="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loginRedirectText"
        android:text="Already an user? Login"
        android:textColorHighlight="@color/white"
        android:layout_gravity="center"
        android:padding="8dp"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        android:textColor="@color/black"/>


</LinearLayout>
